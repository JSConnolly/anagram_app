<style type="text/css">
  .container {
    margin: 20px auto;
    width: 600px;
    padding: 0px 20px 20px 20px;
    border: 1px dotted black;
  }
  th {
    text-align: left;
  }
</style>
<h1>Matthew and J's Anagram Checker</h1>

<div class="container">

  <form action="/" method="GET">
    <input type="text" name="term">
    <br>
    <input type="submit" name="Anagram me!">
  </form>
  <div id="anagrams"></div>
<div>
  <% if @anagrams %>
  <% @anagrams.each do |word| %>
    <%= word %>
  <% end %>
  <% end %>
</div>

